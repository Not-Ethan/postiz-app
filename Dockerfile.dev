FROM node:22.12.0-alpine3.19
ARG NEXT_PUBLIC_VERSION
ENV NEXT_PUBLIC_VERSION=$NEXT_PUBLIC_VERSION

# Add necessary build tools and openssl for Prisma
RUN apk add --no-cache g++ make py3-pip bash nginx openssl

# Install pnpm and pm2 globally
RUN npm --no-update-notifier --no-fund --global install pnpm@10.6.1 pm2

WORKDIR /app

# Copy workspace root files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Copy all workspace package.json files
COPY apps ./apps
COPY libraries ./libraries

# Keep only package.json files and Prisma schema, remove other source code temporarily
RUN find apps libraries -type f ! -name 'package.json' ! -name 'schema.prisma' -delete
RUN find apps libraries -type d -empty -delete

# Install dependencies
RUN pnpm install --frozen-lockfile

# Now copy the complete source code
COPY . .

# Copy nginx config  
COPY var/docker/nginx.conf /etc/nginx/nginx.conf

# Generate Prisma client (explicit call to ensure it's generated with full schema)
RUN pnpm run prisma-generate

# Build the application
RUN NODE_OPTIONS="--max-old-space-size=4096" pnpm run build

# Set up user and permissions
RUN adduser -D -g 'www' www
RUN mkdir /www
RUN chown -R www:www /var/lib/nginx
RUN chown -R www:www /www

CMD ["sh", "-c", "nginx && pnpm run pm2"]